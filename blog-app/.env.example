# Copy to .env and set values. Do not commit .env.
# For Dokploy: set these in the project environment / secrets.

POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# Full connection string for the app (replace with your values; no secrets in repo).
# For Docker Compose: use host "postgres" (see below). For local dev on host only: use "localhost".
# Optional: if unset, docker-compose builds it from POSTGRES_* with host "postgres".
DATABASE_URL=postgresql://postgres:change-me@postgres:5432/postgres

APP_PORT=3000
